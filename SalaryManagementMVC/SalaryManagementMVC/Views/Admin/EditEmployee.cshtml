@*@using System.Data
@using System.Data.SqlClient
@model System.Data.DataTable*@

@{
    ViewBag.Title = "EditEmployee";
    Layout = "~/Views/shared/AdminMaster.cshtml";

}

<div class="form-container mt-3">
    <form method="post" action="@Url.Action("UpdateEmployee")">
        <!-- Row 1 -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="hidden" name="eid" value="@ViewBag.EmployeeId" />
                    <input type="text" class="form-control" id="employeeId" placeholder="Employee ID" name="eid" value="@ViewBag.EmployeeId" required disabled>
                    <label for="employeeId">Employee ID</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="username" placeholder="Username" name="uname" value="@ViewBag.Username" required>
                    <label for="username">Username</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="firstName" placeholder="First Name" name="fname" value="@ViewBag.FirstName" required>
                    <label for="firstName">First Name</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="lastName" placeholder="Last Name" name="lname" value="@ViewBag.LastName" required>
                    <label for="lastName">Last Name</label>
                </div>
            </div>
        </div>

        <!-- Row 2 -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" placeholder="Email" name="email" value="@ViewBag.Email" required>
                    <label for="email">Email</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="hidden" name="password" value="@ViewBag.Password" />
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" value="@ViewBag.Password" required disabled>
                    <label for="password">Password</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="date" class="form-control" id="dob" placeholder="Date of Birth" name="dob" value="@ViewBag.DateOfBirth" required>
                    <label for="dob">DOB</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <select class="form-control" id="gender" name="gender" required>
                        <option value="male" @(ViewBag.Gender == "male" ? "selected" : null)>Male</option>
                        <option value="female" @(ViewBag.Gender == "female" ? "selected" : null)>Female</option>
                        <option value="other" @(ViewBag.Gender == "other" ? "selected" : null)>Other</option>
                    </select>
                    <label for="gender">Gender</label>
                </div>
            </div>

        </div>

        <!-- Row 3 -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="placeOfBirth" placeholder="Place of Birth" name="pob" value="@ViewBag.PlaceOfBirth" required>
                    <label for="placeOfBirth">Place of Birth</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="bloodGroup" placeholder="Blood Group" name="bloodgroup" value="@ViewBag.BloodGroup" required>
                    <label for="bloodGroup">Blood Group</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="fathersName" placeholder="Father's Name" name="fathername" value="@ViewBag.FatherName" required>
                    <label for="fathersName">Father's Name</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="mothersName" placeholder="Mother's Name" name="mothername" value="@ViewBag.MotherName" required>
                    <label for="mothersName">Mother's Name</label>
                </div>
            </div>
        </div>

        <!-- Row 4 -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="spouseName" placeholder="Spouse Name" name="sname" value="@ViewBag.SpouseName" required>
                    <label for="spouseName">Spouse Name</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="department" placeholder="Department" name="dept" value="@ViewBag.Department" required>
                    <label for="department">Department</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="designation" placeholder="Designation" name="designation" value="@ViewBag.Designation" required>
                    <label for="designation">Designation</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="date" class="form-control" id="joiningDate" placeholder="Joining Date" name="jdate" value="@ViewBag.JoiningDate" required>
                    <label for="joiningDate">Joining Date</label>
                </div>
            </div>
        </div>

        <!-- Row 5 -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="basicPay" placeholder="Basic Pay" name="bpay" value="@ViewBag.BasicPay" required>
                    <label for="basicPay">Basic Pay</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="gradePay" placeholder="Grade Pay" name="gpay" value="@ViewBag.GradePay" required>
                    <label for="gradePay">Grade Pay</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="hra" placeholder="HRA" name="hra" value="@ViewBag.HRA" required>
                    <label for="hra">HRA</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="increment" placeholder="Increment" name="inc" value="@ViewBag.Increment" required>
                    <label for="increment">Increment</label>
                </div>
            </div>
        </div>

        <!-- Row 6 -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="da" placeholder="DA" name="da" value="@ViewBag.DA" required>
                    <label for="da">DA</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="accountNo" placeholder="Account No" name="accountno" value="@ViewBag.AccountNo" required>
                    <label for="accountNo">Account No</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="ifsc" placeholder="IFSC" name="ifsc" value="@ViewBag.IFSC" required>
                    <label for="ifsc">IFSC</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="bankName" placeholder="Bank Name" name="bankname" value="@ViewBag.BankName" required>
                    <label for="bankName">Bank Name</label>
                </div>
            </div>
        </div>

        <!-- Row 7 -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="permanentAddress" placeholder="Permanent Address" name="paddress" value="@ViewBag.PermanentAddress" required>
                    <label for="permanentAddress">Permanent Address</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="currentAddress" placeholder="Current Address" name="caddress" value="@ViewBag.CurrentAddress" required>
                    <label for="currentAddress">Current Address</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="contactNo" placeholder="Contact No" name="contact" value="@ViewBag.ContactNo" required>
                    <label for="contactNo">Contact No</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <textarea class="form-control" id="remarks" placeholder="Remarks" name="remarks" rows="3" required>@ViewBag.Remarks</textarea>
                    <label for="remarks">Remarks</label>
                </div>
            </div>

        </div>
        <button type="submit" class="btn btn-primary mt-3" >Update</button>
       @* @Html.ActionLink("Update", "UpdateEmployee", new { @class = "btn btn-primary mt-3" })*@
    </form>
</div>

