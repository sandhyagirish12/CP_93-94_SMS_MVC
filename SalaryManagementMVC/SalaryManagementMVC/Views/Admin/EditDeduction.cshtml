@{
    ViewBag.Title = "EditDeduction";
    Layout = "~/Views/shared/AdminMaster.cshtml";

}

<div class="form-container mt-3">
    <form method="post" action="@Url.Action("UpdateDeduction")">
        <!-- Row 1 -->
        <div class="row">
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="hidden" name="did" value="@ViewBag.DeductionId" />
                    <input type="text" class="form-control" id="did" placeholder="Deduction ID" name="did" value="@ViewBag.DeductionId" required disabled>
                    <label for="did">Deduction ID</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="dname" placeholder="Deduction Name" name="dname" value="@ViewBag.Dname" required>
                    <label for="dname">Deduction Name</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="percentage" placeholder="Percentage" name="percentage" value="@ViewBag.Percentage" required>
                    <label for="percentage">Percentage</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="amount" placeholder="" name="Amount" value="@ViewBag.Amount" required>
                    <label for="amount">Amount</label>
                </div>
            </div>
        </div>

       
        <button type="submit" class="btn btn-primary mt-3">Update</button>
    </form>
</div>




