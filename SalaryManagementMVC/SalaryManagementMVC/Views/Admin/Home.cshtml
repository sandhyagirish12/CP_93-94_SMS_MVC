
@{
    //ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_AdminHome.cshtml";
}
@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function() {
            alert('@ViewBag.Message');
        };
    </script>
}
<div class="login-container d-flex justify-content-center align-items-center min-vh-100">
    <main class="form-signin w-100" style="max-width: 400px;">
        <form method="post" action="@Url.Action("AdminLogin")">
            <h1 class="h3 mb-3 fw-normal text-center">Please Login</h1>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" placeholder="username" name="uname" required>
                <label for="floatingInput">User Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control" id="floatingPassword" placeholder="Password" name="password" required>
                <label for="floatingPassword">Password</label>
            </div>
            <div class="mb-3">
                <input type="checkbox" id="showPassword" onclick="togglePassword()"> Show Password
            </div>

            <script>
                function togglePassword() {
                    var passwordField = document.getElementById("floatingPassword");
                    var showPassword = document.getElementById("showPassword");

                    // Toggle the password field type between 'password' and 'text'
                    if (passwordField.type === "password") {
                        passwordField.type = "text";
                    } else {
                        passwordField.type = "password";
                    }
                }
            </script>
            @* @Html.ActionLink("Login", "Dashboard", null, new { @class = "btn btn-primary w-100 py-2" })*@
            <button class="btn btn-primary w-100 py-2" type="submit" name="action">Login</button>

            <div class="mt-3 text-center">
                @Html.ActionLink("Forgot your password?", "ConfirmEmail", null, new { @class = "link-secondary" })
            </div>
        </form>
    </main>
</div>


