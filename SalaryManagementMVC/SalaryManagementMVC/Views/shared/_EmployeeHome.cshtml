
@{
    ViewBag.Title = "_EmployeeHome";
}


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/css/Admin.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <form id="form1">
        <header class="d-flex justify-content-between align-items-center p-3 border-bottom" style="background-color:#2c3e50;">
            <div>
                <a href="https://aytech.co.in/">
                    <img src="../img/ay.png" alt="Logo" class="img-fluid" style="max-height: 50px;">
                </a>
            </div>
            <div class="text-center flex-grow-1">
                <h1 class="h4 mb-0" style="color:white;">Salary Management System</h1>
            </div>
        </header>

        <div>
            @RenderBody()
        </div>
        <div id="footer">
            <p>&copy; 2024 My Website. All rights reserved.</p>
        </div>

    </form>
</body>
</html>


