
@{
    ViewBag.Title = "AdminMaster";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/css/user.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/payroll.css" rel="stylesheet" />
</head>
<body>
        <div id="wrapper">
            <!-- Header Section -->
            <header class="d-flex justify-content-between align-items-center p-3 border-bottom" style="background-color:#2c3e50;">
                <div>
                    <a href="https://aytech.co.in/">
                        <img src="~/Content/img/ay.png" alt="Logo" class="img-fluid" style="max-height: 50px;">
                    </a>
                </div>
                <div class="text-center flex-grow-1">
                    <h1 class="h2 mb-0" style="color:white;">Salary Management System</h1>
                </div>

            </header>

            <div id="main-content">
                <div id="sidebar">
                    <ul>
                       
                        <li class="nav-item">
                            @Html.ActionLink("Dashboard", "Dashboard", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Employee", "CreateEmployee", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Payroll", "ManagePayroll", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Loan", "ManageLoan", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Leave", "ManageLeave", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Deduction", "CreateDeduction", null, new { @class = "nav-link" })
                        </li>
                        @*<li class="nav-item">
                            @Html.ActionLink("Department", "ManageDepartment", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Allowance", "ManageAllowance", null, new { @class = "nav-link" })
                        </li>*@
                        <li class="nav-item">
                            @Html.ActionLink("Logout", "Logout", null, new { @class = "nav-link" })
                        </li>
                        
                    </ul>
                </div>
                <div id="content">
                    @RenderBody()
                </div>
            </div>
            @*<div id="footer">
                <p>&copy; 2024 My Website. All rights reserved.</p>
            </div>*@

        </div>
</body>
</html>
