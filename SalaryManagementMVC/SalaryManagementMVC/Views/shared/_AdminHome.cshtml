@{
    ViewBag.Title = "_AdminHome";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/css/user.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
        @*Header Section*@
        <header class="d-flex justify-content-between align-items-center p-3 border-bottom" style="background-color:#2c3e50;">
            <div class="d-flex align-items-center">
                <a href="https://aytech.co.in/">
                    <img src="~/Content/img/ay.png" alt="Logo" class="img-fluid" style="max-height: 50px;">
                </a>
            </div>
            <div class="text-center flex-grow-1">
                <h1 class="h2 mb-0" style="color:white;">Salary Management System</h1>
            </div>
            <div class="d-flex align-items-center">
                @Html.ActionLink("Employee Login", "Index", "Employee", null, new { @class = "btn btn-primary me-2" })
                @Html.ActionLink("Register", "Register", "Admin", null, new { @class = "btn btn-primary me-2" })
                @Html.ActionLink("Login", "Index", "Admin", null, new { @class = "btn btn-primary" })
            </div>
        </header>


        <div>
            @RenderBody()

        </div>
        @*<div id="footer">
            <p>&copy; 2024 My Website. All rights reserved.</p>
        </div>*@
</body>
</html>


